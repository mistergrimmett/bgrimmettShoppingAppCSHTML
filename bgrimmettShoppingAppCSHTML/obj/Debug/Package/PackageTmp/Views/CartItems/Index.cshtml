@model IEnumerable<bgrimmettShoppingAppCSHTML.Models.CodeFirst.CartItem>

@{
    ViewBag.Title = "Index";
}

<div class="uni">
    <h2 class="text-center">Your Shopping Cart</h2>

    <table class="table">
        <tr>
            <th>
                Customer
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                Price
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                UnitTotal
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.FirstName)
                </td>
                <td>
                    @item.Item.Name
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @item.Item.Price
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @(item.Count * item.Item.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

    <div class="text-right cartTotal">
        <p>
            Total: $@ViewBag.CartTotal
        </p>
    </div>

    <div class="text-right">
        <p>
            @if (ViewBag.CartItems.Count > 0)
            {
                <a href="@Url.Action("Create", "Orders")">Proceed to Checkout</a>
            }
        </p>
    </div>


</div>